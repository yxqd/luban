def visual(director):
    import luban.content
    frame = luban.content.frame(title='Jazz club')

    document = frame.document(id='rootdoc')
    skeleton = director.retrieveVisual('main/skeleton')
    document.add(skeleton)

    frame.maindoc = skeleton.maindoc
    frame.portletdoc = skeleton.portletdoc
    
    portlet = director.retrieveVisual("main/navigation")
    if not portlet:
        raise RuntimeError
    frame.portletdoc.add(portlet)

    return frame


