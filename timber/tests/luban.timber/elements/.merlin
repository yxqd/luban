# -*- python -*-

import merlin.rules, os
from merlin.Context import create
context = create()
context.code.project = 'luban.timber'


tests = []
import glob
seq = open('.sequence').readlines()
isexe = lambda f: os.path.exists(f) and os.access(f, os.X_OK)
for f in seq:
    f = f.strip()
    tests += [t for t in glob.glob(f) if isexe(t)]
    continue


rules = []
rules.append(
    merlin.rules.testSuite(name="luban.timber.elements", tests = tests)
    )


recurse_entries = [
    ]
